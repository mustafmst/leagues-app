<div class="container">         
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Nickname</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.login %></td>
            <td><%= user.email %></td>
            <td class="action-buttons">
                <div class="btn-group">
                    <%= link_to "Show Profile", user, :class => "btn btn-success" %>
                </div>
            </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
