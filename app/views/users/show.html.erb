<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="row user-profile">
            <div class="col-md-4 text-center">
                <img src="<%= @user.getGravatarLink(170) %>" class="img-circle" />
                <br/>If you want to change your picture go to <a href="https://www.gravatar.com">Gravatar</a> and create gravatar. 
            </div>
            <div class="col-md-8">
                <h1><%= @user.login %></h1>
                <h2><%= @user.email %></h2>
            </div>
        </div>
        <% if @user[:id] == session[:current_user_id] %>
        <div class="row">
            <div class="btn btn-primary col-md-2">Change Password</div>
            <div class="col-md-8"></div>
            <div class="btn btn-primary col-md-2">Edit User Data</div>
        </div>
        <% end %>
    </div>
    <div class="col-md-2"></div>
</div>
