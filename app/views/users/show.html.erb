<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="row user-profile">
            <div class="col-md-4 text-center">
                <img src="<%= @user.getGravatarLink(170) %>" class="img-circle" />
                <% if @user[:id] == session[:current_user_id] %>
                    <br/>If you want to change your picture go to <a target="_blank" href="https://www.gravatar.com">Gravatar</a> and create gravatar. 
                <% end %>
            </div>
            <div class="col-md-8">
                <h1><%= @user.login %></h1>
                <h2><%= @user.email %></h2>
                <% if @user[:id] == session[:current_user_id] %>
                <div class="row user-settings">
                    <div class="btn-group">
                        <%= link_to "Edit", edit_user_path, :class => "btn btn-primary" %>
                        <%= link_to "Change Password", edit_password_path, :class => "btn btn-primary" %>
                        <%= link_to "Delete", @user, :method => :delete, :class => "btn btn-danger", 
                                    data: {:confirm => "Are You sure?", :title => "Delete #{@user.login}"} %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
<div class="row  text-center"><h2>User Leagues</h2></div>
<div class="container">   
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
        <% @leagues.find_each do |l| %>
        <tr>
            <td><%= l.name %></td>
            <td>
                <div class="btn-group">
                  <%= link_to "Show", show_league_path(l), :class => "btn btn-success" %>
                </div>
            </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
