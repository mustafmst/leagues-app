<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="row user-profile">
            <div class="col-md-4 text-center">
                <img src="<%= @user.getGravatarLink(170) %>" class="img-circle" />
                <br/>If you want to change your picture go to <a href="https://www.gravatar.com">Gravatar</a> and create gravatar. 
            </div>
            <div class="col-md-8">
                <h1><%= @user.login %></h1>
                <h2><%= @user.email %></h2>
                <% if @user[:id] == session[:current_user_id] %>
                <div class="row user-settings">
                    <div class="btn btn-primary">Edit User Data</div>
                    <div class="btn btn-primary">Change Password</div>
                    <div class="btn btn-danger">Delete</div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
