<div class="row  text-center"><h2>Change Password</h2></div>
<div class="row ">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <% if flash[:error] != nil %>
            <div class="alert alert-danger"><%= flash[:error] %></div>
        <% end %>
        <%= form_with scope: :data, url: update_password_path, :method => :put do |form| %>
            <div class="form-group">
                <%= form.label :password, "Current password: ", class: "control-label" %>
                <%= form.password_field :current_password, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= form.label :password, "Password: ", class: "control-label" %>
                <%= form.password_field :password, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= form.label :password, "Confirm password: ", class: "control-label" %>
                <%= form.password_field :confirm_password, class: "form-control" %>
            </div>
            <%= form.submit 'Save', class: "btn btn-primary" %>
        <% end %>
    </div>
    <div class="col-md-2"></div>
</div>