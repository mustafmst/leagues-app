<div class="row  text-center"><h2>Log In</h2></div>
<div class="row ">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <% if flash[:error] != nil %>
            <div class="alert alert-danger"><%= flash[:error] %></div>
        <% end %>
        <%= form_with scope: :user, url: login_path do |form| %>
            <div class="form-group">
                <%= form.label :login, "Login: ", class: "control-label" %>
                <%= form.text_field :login, class: "form-control", autofocus: "autofocus" %>
            </div>
            <div class="form-group">
                <%= form.label :password, "Password: ", class: "control-label" %>
                <%= form.password_field :password, class: "form-control" %>
            </div>
            <%= form.submit 'Log In', class: "btn btn-primary" %>
        <% end %>
        <p>
         New around here? <%= link_to "Sign Up", new_user_path %>
        </p>
    </div>
    <div class="col-md-2"></div>
</div>