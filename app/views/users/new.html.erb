<div class="row  text-center"><h2>Sign Up</h2></div>
<div class="row ">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <% if flash[:error] != nil %>
            <div class="alert alert-danger"><%= flash[:error] %></div>
        <% end %>
        <%= form_with scope: :user, url: users_path do |form| %>
            <div class="form-group">
                <%= form.label :login, "Login: ", class: "control-label" %>
                <%= form.text_field :login, class: "form-control", autofocus: "autofocus" %>
            </div>
            <div class="form-group">
                <%= form.label :email, "Email: ", class: "control-label" %>
                <%= form.text_field :email, class: "form-control"%>
            </div>
            <div class="form-group">
                <%= form.label :password, "Password: ", class: "control-label" %>
                <%= form.password_field :password, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= form.label :password, "Confirm password: ", class: "control-label" %>
                <%= form.password_field :confirm_password, class: "form-control" %>
            </div>
            <%= form.submit 'Register', class: "btn btn-primary" %>
        <% end %>
    </div>
    <div class="col-md-2"></div>
</div>
