<div class="row  text-center"><h2>Save game score</h2></div>
<div class="row ">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <%= form_with scope: :game, method: :put, url: update_game_path do |form| %>
            <div class="form-group">
                <%= form.label :score_1, "Scroe for #{@game.player_1}:", class: "control-label" %> 
                <%= form.number_field :score_1, in: 0..1000, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= form.label :score_2, "Scroe for #{@game.player_2}:", class: "control-label" %> 
                <%= form.number_field :score_2, in: 0..1000, class: "form-control" %>
            </div>
            <%= form.submit 'Save', class: "btn btn-primary" %>
        <% end %>
    </div>
    <div class="col-md-2"></div>
</div>
