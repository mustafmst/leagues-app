<div class="row  text-center"><h2>Create Your new League</h2></div>
<div class="row ">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <% if flash[:error] != nil %>
            <div class="alert alert-danger"><%= flash[:error] %></div>
        <% end %>
        <%= form_with scope: :league, url: create_league_path do |form| %>
            <div class="form-group">
                <%= form.label :name, "Name: ", class: "control-label" %>
                <%= form.text_field :name, class: "form-control", autofocus: "autofocus" %>
            </div>
            <div class="form-group">
                <%= form.label :max_contestants, "Maximum number of Contestants: ", class: "control-label" %> 
                <%= form.number_field :max_contestants, in: 1..30, class: "form-control" %>
            </div>
            <%= form.submit 'Create League', class: "btn btn-primary" %>
        <% end %>
    </div>
    <div class="col-md-2"></div>
</div>