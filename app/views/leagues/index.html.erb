<div class="container">         
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Owner</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
        <% @leagues.each do |l| %>
        <tr>
            <td><%= l.name %></td>
            <td><%= l.user.login %></td>
            <td class="action-buttons">
                <div class="btn-group">
                  <%= link_to "Show", show_league_path(l), :class => "btn btn-success" %>
                  <% if l.can_user_register(session[:current_user_id]) %>
                    <%= link_to "Participate", add_contestant_path(l, session[:current_user_id]), :class => "btn btn-success" %>
                  <% else %>
                    <a href="#" class="btn btn-success" disabled>Participate</a>
                  <% end %>
                </div>
            </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>