<div class="container">         
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Owner</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
        <% @leagues.each do |l| %>
        <tr>
            <td><%= l.name %></td>
            <td><%= l.user.login %></td>
            <td>
                <div class="btn-group">
                  <%= link_to "Show", show_league_path(l), :class => "btn btn-success" %>
                </div>
            </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>